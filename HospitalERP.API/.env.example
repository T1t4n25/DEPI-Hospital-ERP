# Database Configuration
DB_SERVER=localhost
DB_PORT=1433
DB_DATABASE=HospitalERP
DB_USER=sa
DB_PASSWORD=YourStrong!Password123

# Keycloak Configuration (for development)
KEYCLOAK_AUTHORITY=http://localhost:8080/auth/realms/hospital-erp
KEYCLOAK_AUDIENCE=hospital-erp-api
KEYCLOAK_REQUIRE_HTTPS=false

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001

# Keycloak Service Client (for JWT token generation)
KEYCLOAK_CLIENT_ID=hospital-erp-service-client
KEYCLOAK_CLIENT_SECRET=your-service-client-secret-here
KEYCLOAK_TOKEN_ENDPOINT=http://localhost:8080/auth/realms/hospital-erp/protocol/openid-connect/token

# Keycloak Base URL (alternative to KEYCLOAK_AUTHORITY)
KEYCLOAK_BASE_URL=http://localhost:8080
KEYCLOAK_REALM=hospital-erp
