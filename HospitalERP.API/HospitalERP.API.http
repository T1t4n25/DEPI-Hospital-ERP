@HospitalERP.API_HostAddress = http://localhost:5001
@Token = your-jwt-token-here

# Get JWT token from Keycloak using the Python script:
# cd HospitalERP.API
# python op_scripts/get-keycloak-token.py
# Then copy the token from token.txt and replace @Token above

###
# Patients API
###

GET {{HospitalERP.API_HostAddress}}/api/patients?pageNumber=1&pageSize=10
Authorization: Bearer {{Token}}

###

GET {{HospitalERP.API_HostAddress}}/api/patients/1
Authorization: Bearer {{Token}}

###

POST {{HospitalERP.API_HostAddress}}/api/patients
Authorization: Bearer {{Token}}
Content-Type: application/json

{
  "firstName": "John",
  "lastName": "Doe",
  "dateOfBirth": "1990-01-15",
  "genderID": 1,
  "bloodTypeID": 1,
  "address": "123 Main St",
  "contactNumber": "1234567890"
}

###

PUT {{HospitalERP.API_HostAddress}}/api/patients/1
Authorization: Bearer {{Token}}
Content-Type: application/json

{
  "firstName": "John",
  "lastName": "Doe Updated",
  "dateOfBirth": "1990-01-15",
  "genderID": 1,
  "bloodTypeID": 1,
  "address": "123 Main St Updated",
  "contactNumber": "1234567890"
}

###

DELETE {{HospitalERP.API_HostAddress}}/api/patients/1
Authorization: Bearer {{Token}}

